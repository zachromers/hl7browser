{
  "manifest_version": 3,
  "name": "HL7 Browser",
  "version": "1.1",
  "description": "Parse and browse HL7 files with interactive hover tooltips showing field names and descriptions",
  "action": {
    "default_popup": "popup.html",
    "default_title": "HL7 Browser Settings"
  },
  "content_scripts": [
    {
      "matches": [
        "file://*/*.hl7",
        "file://*/*.HL7",
        "file://*/*.txt",
        "file://*/*.TXT"
      ],
      "js": ["hl7-fields.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage", "tabs"]
}
