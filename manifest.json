{
  "manifest_version": 3,
  "name": "HL7 Browser",
  "version": "1.2",
  "description": "Parse and browse HL7 files with interactive hover tooltips showing field names and descriptions",
  "action": {
    "default_popup": "popup.html",
    "default_title": "HL7 Browser Settings"
  },
  "content_scripts": [
    {
      "matches": [
        "file:///*"
      ],
      "js": ["hl7-fields.js", "stats.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage", "tabs"]
}
